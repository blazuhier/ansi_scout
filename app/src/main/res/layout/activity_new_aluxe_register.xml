<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.ansi.scouting.activity.aluxes.aluxes_register.NewAluxeRegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/aluxes_color"
            android:orientation="vertical"
            android:paddingBottom="@dimen/fifteen_margin">

            <ImageView
                android:id="@+id/aluxes_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/fifteen_margin"
                android:src="@drawable/img_aluxes" />

            <TextView
                android:id="@+id/title_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/tv_title_new_registry"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sub_title_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_grid"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:paddingStart="@dimen/fifty_margin"
                android:paddingEnd="@dimen/fifty_margin"
                android:text="@string/tv_sub_title_new_registry"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_payment_folio"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="@dimen/twenty_margin"
            android:background="@color/white"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_payment_folio"
                style="@style/TextInputLayoutStyleAluxes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twenty_margin"
                android:hint="@string/tv_payment_folio"
                android:paddingStart="@dimen/thirty_margin"
                android:paddingEnd="@dimen/thirty_margin"
                app:errorEnabled="true"
                app:hintTextColor="@color/aluxes_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_payment_folio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_payment_folio"
                    android:drawablePadding="@dimen/fifteen_margin"
                    android:hint="@string/tv_payment_folio_desc"
                    android:inputType="number"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_disabled" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_aluxe_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingTop="@dimen/ten_margin"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_aluxes_information"
                style="@style/ButtonStyleAluxesInfo"
                android:layout_width="match_parent"
                android:clickable="false"
                android:focusable="false"
                android:text="@string/btn_aluxes_information" />

            <include
                android:id="@+id/layoutPhoto"
                layout="@layout/layout_take_photo" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_aluxe_name"
                style="@style/TextInputLayoutStyleAluxes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/twenty_margin"
                android:hint="@string/tv_name"
                android:paddingStart="@dimen/thirty_margin"
                android:paddingEnd="@dimen/thirty_margin"
                app:errorEnabled="true"
                app:hintTextColor="@color/aluxes_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_aluxe_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_name"
                    android:drawablePadding="@dimen/fifteen_margin"
                    android:hint="@string/tv_name"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_disabled"
                    android:textCursorDrawable="@drawable/cursor" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/thirty_margin"
                android:text="@string/tv_genre"
                android:textColor="@color/aluxes_color"
                android:textSize="@dimen/min_text_size" />

            <RadioGroup
                android:id="@+id/genre_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/thirty_margin"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_deposito"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/aluxes_color"
                    android:checked="true"
                    android:text="@string/tv_female"
                    android:textColor="@color/black" />

                <RadioButton
                    android:id="@+id/radio_paypal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/aluxes_color"
                    android:checked="false"
                    android:text="@string/tv_male"
                    android:textColor="@color/black" />
            </RadioGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_aluxe_address"
                style="@style/TextInputLayoutStyleAluxes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/tv_address"
                android:paddingStart="@dimen/thirty_margin"
                android:paddingEnd="@dimen/thirty_margin"
                app:errorEnabled="true"
                app:hintTextColor="@color/aluxes_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_aluxe_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_address"
                    android:drawablePadding="@dimen/fifteen_margin"
                    android:hint="@string/tv_address"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_disabled"
                    android:textCursorDrawable="@drawable/cursor" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/ly_address_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ly_address_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ly_address_parts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ly_suburb_part"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="2">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/til_aluxe_suburb"
                                style="@style/TextInputLayoutStyleAluxes"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/tv_suburb"
                                android:paddingStart="@dimen/thirty_margin"
                                android:paddingEnd="@dimen/thirty_margin"
                                app:errorEnabled="true"
                                app:hintTextColor="@color/aluxes_color">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/et_aluxe_suburb"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawablePadding="@dimen/fifteen_margin"
                                    android:hint="@string/tv_suburb"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/gray_disabled"
                                    android:textCursorDrawable="@drawable/cursor" />
                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ly_zip_code_part"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/til_aluxe_zip_code"
                                style="@style/TextInputLayoutStyleAluxes"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/tv_zip_code"
                                android:paddingEnd="@dimen/thirty_margin"
                                app:errorEnabled="true"
                                app:hintTextColor="@color/aluxes_color">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/et_aluxe_zip_code"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawablePadding="@dimen/fifteen_margin"
                                    android:hint="@string/tv_zip_code"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/gray_disabled"
                                    android:textCursorDrawable="@drawable/cursor" />
                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_aluxe_municipality"
                style="@style/TextInputLayoutStyleAluxes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/tv_municipality"
                android:paddingStart="@dimen/thirty_margin"
                android:paddingEnd="@dimen/thirty_margin"
                app:errorEnabled="true"
                app:hintTextColor="@color/aluxes_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_aluxe_municaplity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/fifteen_margin"
                    android:hint="@string/tv_municipality"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_disabled"
                    android:textCursorDrawable="@drawable/cursor" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_aluxe_birth_date"
                style="@style/TextInputLayoutStyleAluxes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/tv_birth_date"
                android:paddingStart="@dimen/thirty_margin"
                android:paddingEnd="@dimen/thirty_margin"
                app:errorEnabled="true"
                app:hintTextColor="@color/aluxes_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_aluxe_birth_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_birth_date"
                    android:drawablePadding="@dimen/fifteen_margin"
                    android:hint="@string/tv_birth_date"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_disabled"
                    android:textCursorDrawable="@drawable/cursor" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_aluxe_curp"
                style="@style/TextInputLayoutStyleAluxes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/tv_curp"
                android:paddingStart="@dimen/thirty_margin"
                android:paddingEnd="@dimen/thirty_margin"
                app:errorEnabled="true"
                app:hintTextColor="@color/aluxes_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_aluxe_curp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_curp"
                    android:drawablePadding="@dimen/fifteen_margin"
                    android:hint="@string/tv_curp"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_disabled"
                    android:textCursorDrawable="@drawable/cursor" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/thirty_margin"
                android:text="@string/tv_religion"
                android:textColor="@color/aluxes_color"
                android:textSize="@dimen/min_text_size" />

            <RadioGroup
                android:id="@+id/religion_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/thirty_margin"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_catholic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/aluxes_color"
                    android:checked="true"
                    android:text="@string/tv_catholic"
                    android:textColor="@color/black" />

                <RadioButton
                    android:id="@+id/radio_christian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/aluxes_color"
                    android:checked="false"
                    android:text="@string/tv_christian"
                    android:textColor="@color/black" />

                <RadioButton
                    android:id="@+id/radio_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/aluxes_color"
                    android:checked="false"
                    android:text="@string/tv_other"
                    android:textColor="@color/black" />
            </RadioGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_aluxe_other_religion"
                style="@style/TextInputLayoutStyleAluxes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/tv_religion_other_question"
                android:paddingStart="@dimen/thirty_margin"
                android:paddingEnd="@dimen/thirty_margin"
                android:visibility="gone"
                app:errorEnabled="true"
                app:hintTextColor="@color/aluxes_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_aluxe_other_religion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/fifteen_margin"
                    android:hint="@string/tv_religion_other_question"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_disabled"
                    android:textCursorDrawable="@drawable/cursor" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_aluxe_security_social_number"
                style="@style/TextInputLayoutStyleAluxes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/tv_number_social_security"
                android:paddingStart="@dimen/thirty_margin"
                android:paddingEnd="@dimen/thirty_margin"
                app:errorEnabled="true"
                app:hintTextColor="@color/aluxes_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_aluxe_security_social_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_social_number_security"
                    android:drawablePadding="@dimen/fifteen_margin"
                    android:hint="@string/tv_number_social_security"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_disabled"
                    android:textCursorDrawable="@drawable/cursor" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_aluxe_scout_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingTop="@dimen/twenty_margin"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_aluxes_scout_history"
                style="@style/ButtonStyleAluxesInfo"
                android:layout_width="match_parent"
                android:clickable="false"
                android:focusable="false"
                android:padding="@dimen/ten_margin"
                android:text="@string/btn_scout_history" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/thirty_margin"
                android:text="@string/tv_association"
                android:textColor="@color/aluxes_color"
                android:textSize="@dimen/min_text_size" />

            <RadioGroup
                android:id="@+id/association_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/thirty_margin"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radio_ansi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/aluxes_color"
                    android:checked="true"
                    android:text="@string/tv_ansi"
                    android:textColor="@color/black" />

                <RadioButton
                    android:id="@+id/radio_asmac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/aluxes_color"
                    android:checked="false"
                    android:text="@string/tv_asmac"
                    android:textColor="@color/black" />

                <RadioButton
                    android:id="@+id/radio_agsmex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/aluxes_color"
                    android:checked="false"
                    android:text="@string/tv_agsmex"
                    android:textColor="@color/black" />

                <RadioButton
                    android:id="@+id/radio_exploer_issste"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/aluxes_color"
                    android:checked="false"
                    android:text="@string/tv_issste_explorer"
                    android:textColor="@color/black" />

                <RadioButton
                    android:id="@+id/radio_other_association"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/aluxes_color"
                    android:checked="false"
                    android:text="@string/tv_other"
                    android:textColor="@color/black" />
            </RadioGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_aluxe_other_association"
                style="@style/TextInputLayoutStyleAluxes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/tv_other_association"
                android:paddingStart="@dimen/thirty_margin"
                android:paddingEnd="@dimen/thirty_margin"
                android:visibility="gone"
                app:errorEnabled="true"
                app:hintTextColor="@color/aluxes_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_aluxe_other_association"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/fifteen_margin"
                    android:hint="@string/tv_other_association"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_disabled"
                    android:textCursorDrawable="@drawable/cursor" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/thirty_margin"
                android:text="@string/tv_section"
                android:textColor="@color/aluxes_color"
                android:textSize="@dimen/min_text_size" />

            <RadioGroup
                android:id="@+id/section_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/thirty_margin"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radio_aluxes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/aluxes_color"
                    android:checked="true"
                    android:text="@string/tv_aluxes_cast_section"
                    android:textColor="@color/black" />
            </RadioGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_aluxe_location"
                style="@style/TextInputLayoutStyleAluxes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/tv_location"
                android:paddingStart="@dimen/thirty_margin"
                android:paddingEnd="@dimen/thirty_margin"
                app:errorEnabled="true"
                app:hintTextColor="@color/aluxes_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_aluxe_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_lis_flower"
                    android:drawablePadding="@dimen/fifteen_margin"
                    android:hint="@string/tv_location"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_disabled"
                    android:textCursorDrawable="@drawable/cursor" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_aluxe_date_entry"
                style="@style/TextInputLayoutStyleAluxes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/tv_date_register"
                android:paddingStart="@dimen/thirty_margin"
                android:paddingEnd="@dimen/thirty_margin"
                app:errorEnabled="true"
                app:hintTextColor="@color/aluxes_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_aluxe_date_entry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_calendar"
                    android:drawablePadding="@dimen/fifteen_margin"
                    android:hint="@string/tv_date_register"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_disabled"
                    android:textCursorDrawable="@drawable/cursor" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_aluxe_maximun_advance"
                style="@style/TextInputLayoutStyleAluxes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/tv_maximum_advance"
                android:paddingStart="@dimen/thirty_margin"
                android:paddingEnd="@dimen/thirty_margin"
                app:errorEnabled="true"
                app:hintTextColor="@color/aluxes_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_aluxe_maximum_advance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_insigne"
                    android:drawablePadding="@dimen/fifteen_margin"
                    android:hint="@string/tv_maximum_advance"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_disabled"
                    android:textCursorDrawable="@drawable/cursor" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- SECTION TUTOR INFORMATION ALUXE -->
        <LinearLayout
            android:id="@+id/ly_aluxe_tutor_information"
            android:layout_width="match_parent"
